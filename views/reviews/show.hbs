<div class="row">
    <div class="col s12 m8">
        <h3>{{review.title}}
            <small>{{{editIcon review.user user review._id false}}}</small>
        </h3>
        <h4>{{review.brewery}}</h4>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{review.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{review.user.displayName}}</span>
                <img src="{{review.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/reviews/user/{{review.user._id}}">More From {{review.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>